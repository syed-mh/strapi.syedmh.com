{
  "kind": "collectionType",
  "collectionName": "project",
  "info": {
    "name": "project",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "featuredImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "details": {
      "type": "text",
      "required": true,
      "maxLength": 450,
      "minLength": 100
    },
    "technologies": {
      "collection": "technology",
      "via": "projects"
    },
    "project_type": {
      "model": "project-type",
      "via": "projects"
    },
    "project_category": {
      "model": "project-category",
      "via": "projects"
    },
    "repo": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "highlight": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "photoCredit": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "pageViews": {
      "type": "component",
      "repeatable": true,
      "component": "image-container.website-view",
      "required": true
    }
  }
}
